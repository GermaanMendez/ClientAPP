@using MVC.Models.ViewModels
@model IEnumerable<CabañaViewModel>

@{
    ViewData["Title"] = "BuscarPorCantPersonas";
}

<h1>Search cabins for amount of people/guests.</h1>
<form method="post">
    <label>Amount to search</label>
