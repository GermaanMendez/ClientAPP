@using MVC.Models.ViewModels;
@model IEnumerable<CabañaViewModel>

@{
    ViewData["Title"] = "ListarDisponiblesEnRangoFechas";
}
<h1>Buscar cabañas disponibles para alquilar </h1>
<p>@ViewBag.Mensaje</p>
<form method="post">
         <label>Fecha desde</label>
    <input type="date" name="fDesde" id="fDesde" value="2020-01-01" />
         <label>Fecha Hasta</label>
    <input type="date" name="fHasta" id="fHasta" value="2020-02-01" />
         <button type="submit" class="btn btn-primary">Search</button>
</form>
@if (Model != null)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoseeJacuzzi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstaHabilitada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadPersonasMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCabaña)
            </th>
             <th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoseeJacuzzi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstaHabilitada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadPersonasMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCabaña.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
}