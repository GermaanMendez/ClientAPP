                @Html.DisplayFor(modelItem => item.IdCabaña)
            </td>
            <td>
               @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <h1>There are no Maintenances in the system, <a asp-action="Create">create one</a> or return to the start.</h1>
}