@using MVC.Models.ViewModels.Mantenimiento;
@model IEnumerable<MantenimientoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>@ViewBag.Mensaje</div>
@if (Model != null){

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Date
            </th>
            <th>
                Description
            </th>
            <th>
                Cost
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Room Number
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaMantenimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoMantenimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCabaña)
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <h1>There are no Maintenances in the system, <a asp-action="Create">create one</a> or return to the start.</h1>
}