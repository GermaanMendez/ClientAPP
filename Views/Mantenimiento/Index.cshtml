@using MVC.Models.ViewModels;
@model IEnumerable<MantenimientoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>@ViewBag.Mensaje</div>
@if (Model != null){

<table class="table">
    <thead>
