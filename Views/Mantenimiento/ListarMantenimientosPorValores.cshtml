@using MVC.Models.ViewModels.Mantenimiento
@model IEnumerable<MantenimientoViewModel>

@{
    ViewData["Title"] = "ListarMantenimientosPorValores";
}

<h1>List Maintenance for values</h1>
<form method="post" class="container mt-4">
    <div class="form-group">
        <label for="valor1">Valor 1:</label>
        <input type="text" class="form-control col-md-6" id="valor1" name="valor1" placeholder="Enter value 1">
    </div>
    <div class="form-group">
        <label for="valor2">Valor 2:</label>
        <input type="text" class="form-control col-md-6" id="valor2" name="valor2" placeholder="Enter value 2">
    </div>
    <button type="submit" class="btn btn-success">Search</button>
</form>



<div>@ViewBag.Mensaje</div>
<table class="table">
    <thead>

            <th>
                Cost
            </th>
            <th>
                Employee Name
            </th>

        </tr>
    </thead>
    <tbody>
@if(Model!=null){
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CostoMantenimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEmpleado)
            </td>

        </tr>
}
}
    </tbody>
</table>